import json
import os
import signal
import sys

import jsonschema

if @local_build@:
    sys.path.insert(1, '@pythondir@')
    os.environ["XDG_DATA_DIRS"] = '@schemasdir@:' + os.environ.get("XDG_DATA_DIRS", "/usr/share")

    # icon_theme = Gtk.IconTheme.get_for_display(Gdk.Display.get_default())
    # icon_theme.add_search_path("@schemasdir@" + '/icons')
else:
    sys.path.insert(1, '@pkgdatadir@')

import gi

gi.require_version('Gtk', '4.0')
gi.require_version('Adw', '1')
gi.require_version('Shumate', '1.0')
from gi.repository import Gio, Adw

Adw.init()


def set_resources():
    from pygpxviewer import config

    resource = Gio.resource_load(os.path.join('@pkgdatadir@', '@application_id@.gresource'))
    Gio.Resource._register(resource)

    resources_files = [
        {"path": config.dem_file, "resource": "/dem/dem.json", "schema": "/dem/dem.jsonschema"},
        {"path": config.map_file, "resource": "/map/map.json", "schema": "/map/map.jsonschema"}
    ]

    for resource_file in resources_files:
        add_resource_file(resource_file["path"], resource_file["resource"], resource_file["schema"])


def add_resource_file(path, resource, schema):
    from pygpxviewer.logger import Logger
    from pygpxviewer import utils

    logger = Logger()
    resource = utils.get_resource_as_string(resource)
    schema = utils.get_resource_as_string(schema)

    if not path.exists():
        logger.info(f"json file is not valid: {path}")
        open(path, 'w').write(resource)
    else:
        resource = open(path, 'r').read()

    try:
        schema_json = json.loads(schema)
        resource_json = json.loads(resource)
        jsonschema.validate(resource_json, schema_json)
    except:
        logger.warning(f"json file is not valid: {path}")
        open(path, 'w').write(resource)


def run_application():
    from pygpxviewer.application import Application

    signal.signal(signal.SIGINT, signal.SIG_DFL)
    application = Application('@application_id@')
    return application.run(sys.argv)


def main():
    set_resources()
    return run_application()


if __name__ == '__main__':
    sys.exit(main())
