<schemalist>
    <schema path="/com/github/pygpxviewer/window/" id="com.github.pygpxviewer.window">
        <key name="width" type="i">
            <default>640</default>
        </key>
        <key name="height" type="i">
            <default>480</default>
        </key>
        <key name="is-maximized" type="b">
            <default>false</default>
        </key>
        <key name="is-fullscreen" type="b">
            <default>false</default>
        </key>
        <key name="folder-path" type="s">
            <default>"/home/vcottineau/Documents/Voyages/Tracks/Gpx"</default>
        </key>
    </schema>
    <schema path="/com/github/pygpxviewer/app/window/detailed/" id="com.github.pygpxviewer.app.window.detailed">
        <key name="width" type="i">
            <default>640</default>
        </key>
        <key name="height" type="i">
            <default>480</default>
        </key>
        <key name="is-maximized" type="b">
            <default>false</default>
        </key>
        <key name="is-fullscreen" type="b">
            <default>false</default>
        </key>
    </schema>
    <schema path="/com/github/pygpxviewer/app/window/detailed/map/"
            id="com.github.pygpxviewer.app.window.detailed.map">
        <key name="zoom-level" type="d">
            <default>5</default>
        </key>
        <key name="latitude" type="d">
            <default>46.227638</default>
        </key>
        <key name="longitude" type="d">
            <default>2.213749</default>
        </key>
        <key name="layer-provider" type="s">
            <default>"OpenStreetMap"</default>
        </key>
        <key name="layer-url" type="s">
            <default>"https://tile.openstreetmap.org/{z}/{x}/{y}.png"</default>
        </key>
    </schema>
    <schema path="/com/github/pygpxviewer/gpx/"
            id="com.github.pygpxviewer.gpx">
        <key name="clean-headers" type="b">
            <default>true</default>
        </key>
        <key name="clean-attributes" type="b">
            <default>true</default>
        </key>
        <key name="simplify" type="b">
            <default>true</default>
        </key>
        <key name="elevation" type="b">
            <default>true</default>
        </key>
    </schema>
</schemalist>
